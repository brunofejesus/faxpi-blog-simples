@page
@model FaxpiBlogSimples.App.Pages.Usuario.RegistrarModel
@{
}

<h1>Register</h1>

<form method="post">
  <div asp-validation-summary="All" class="text-danger"></div>
  <div class="form-group">
    <label asp-for="Comando.Nome"></label>
    <input asp-for="Comando.Nome" class="form-control" />
    <span asp-validation-for="Comando.Nome" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="Comando.Email"></label>
    <input asp-for="Comando.Email" class="form-control" />
    <span asp-validation-for="Comando.Email" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="Comando.Senha"></label>
    <input asp-for="Comando.Senha" class="form-control" type="password"/>
    <span asp-validation-for="Comando.Senha" class="text-danger"></span>
  </div>
  <button type="submit" class="btn btn-primary mt-2">Register</button>
</form>