@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


  <div class="container px-4 py-5">
    <h2 class="pb-2 border-bottom">Postagens</h2>

    <div class="row row-cols-1 row-cols-md-2 align-items-md-center g-5 py-5">
      <div class="col d-flex flex-column align-items-start gap-2">
        <h2 class="fw-bold text-body-emphasis">Entre ou registre-se! para fazer uma postagem</h2>
        <a href="/Usuario/Login" class="btn btn-success btn-lg">Entrar</a>
        <a href="/Usuario/Registrar" class="btn btn-primary btn-lg">Registrar</a>
      </div>

      <div class="col">
        <div class="row row-cols-1 row-cols-sm-2 g-4">

          @foreach (var item in Model.Postagens)
          {
            <div class="col d-flex flex-column gap-2 border border-success">
              <div class="feature-icon-small d-inline-flex align-items-center justify-content-center text-bg-primary bg-gradient fs-4 rounded-3">
                <svg class="bi" width="1em" height="1em">
                  <use xlink:href="#collection" />
                </svg>
              </div>
              <h4 class="fw-semibold mb-0 text-body-emphasis">@item.Titulo</h4>
              <p class="text-body-secondary">@item.Conteudo</p>
            </div>
          }
      </div>
    </div>
  </div>
 </div>